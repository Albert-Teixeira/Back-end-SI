generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProductType {
  HOMENS
  MULHERES
  TRAVESTIS
  VIPS
}

enum CityType {
  AsaNorte
  AsaSul
  AguasClaras
  LagoSul
  LagoNorte
  Sudoeste
  NucleoBandeirantes
  Guara
  Taguatinga
  VicentePires
  Ceilandia
  Samambaia
  RiachoFundo
  RecantoDasEmas
  SantaMaria
  Gama
  SaoSebastiao
  Paranoa
  Planaltina
  Sobradinho
  Brazlandia
  Candangolandia
}


model Product {
  id          Int      @id @default(autoincrement())
  url         String[] 
  nome        String 
  telefone    String
  idade       Int
  peso        Int
  MoraSo      String
  valor       Int
  oral        String
  cartao      String
  cidade      CityType
  altura      Int
  beija       String
  horario     String
  whatsapp    String
  atende      String
  anal        String
  type        ProductType 
  descricao   String
  acessos     Int @default(0)
  pago        Boolean @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  reviews Review[]

}

model Review {
  id          Int     @id @default(autoincrement())
  text        String
  user        String
  userEmail   String
  profilePictureUrl String
  productId   Int
  product     Product @relation(fields: [productId], references: [id])
  createdAt   DateTime @default(now())
}
